[core]
    editor = vim
[user]
    name = mudbungie
    email = mudbungie@gmail.com
[color]
    ui = auto
[merge]
    tool = vimdiff
[alias]
    a = add
    aa = add --all
    ca = commit --amend
    ci = commit --verbose
    cia = commit --amend --verbose
    co = checkout
    di = diff
    dic = diff --cached
    di1 = diff HEAD~
    st = status
    ff = merge --ff-only
    pff = pull --ff-only
    noff = merge --no-ff
    fa = fetch --all
    p = push
    po = push origin
    pom = push origin master
    poma = push origin main
    poml = push origin mainline
    pod = push origin dev

    l = "!. ~/.githelpers && pretty_git_log"
    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all
    head = !git r -1
    h = !git head
    b = "!. ~/.githelpers && pretty_git_branch"
    b = "!. ~/.githelpers && pretty_git_branch_sorted"
